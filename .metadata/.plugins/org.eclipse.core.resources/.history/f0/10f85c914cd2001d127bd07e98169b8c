
public class Pizza extends Alimento {

	
	private String sabor; //calabresa, frango..
	private String tamanho; //pequena, grande...
	private double peso; //250g, 380.9g...
	private double valor; 
	
	public Pizza(String sabor, String tamanho, double peso, double valor) {
		super();
		this.sabor = sabor;
		this.tamanho = tamanho;
		this.peso = peso;
		this.valor = valor;
	}
	
	public String getSabor() {
		return sabor;
	}
	public void setSabor(String sabor) {
		this.sabor = sabor;
	}
	public String getTamanho() {
		return tamanho;
	}
	public void setTamanho(String tamanho) {
		this.tamanho = tamanho;
	}
	public double getPeso() {
		return peso;
	}
	public void setPeso(double peso) {
		this.peso = peso;
	}

	public double getValor() {
		return valor;
	}

	public void setValor(double valor) {
		this.valor = valor;
	}
	
	
}
